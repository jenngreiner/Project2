{{#each yards as |yard| }}
<div class="row mb-4 yard">
    <div class="col-md-6">
        <h2>
            <a href="/yard/{{id}}">{{user.fname}} {{user.lname}}'s Yard</a>
        </h2>
        <p>{{description}}</p>
    </div>
    <div class="col-md-6">
        <h3 style="padding: 10px;">{{name}}</h3>
        <ul style="padding: 10px; list-style-type: none;">
            <li>{{address}}</li>
            <li>{{city}}</li>
            <li>{{state}}</li>
            <li>{{zip}}</li>
        </ul>
    </div>
</div>
{{/each}}